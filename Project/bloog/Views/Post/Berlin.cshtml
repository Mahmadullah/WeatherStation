@model IEnumerable<bloog.Models.Post>
@{
    ViewBag.Title = "Berlin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Berlin</h2>

@Html.ActionLink("CREATE POST", "Create", "Post")<br /><br />


<div class="allPosts col-md-10">
    @foreach (var item in Model)
    {
        if (@item.City.CityName == "Berlin")
        {
            <div class="singlePost col-md-10">
                <p class="@item.City.CityName cityNamePost">@item.City.CityName</p>
                <div class="postInfo">
                    <p class="postTitle">@item.Title</p>
                    <p>@Html.ActionLink("See post", "Details", new { Id = item.PostId })</p>
                </div>
            </div>
        }
    }
</div>

<div class="col-md-2">
    <p class="backCities">@Html.ActionLink("<<", "Index", "Post")</p>
</div>